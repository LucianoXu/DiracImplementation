(* This a confluent presentation for the diedral group of order $2\pi /{N}$
*)



let N = parameters "N";

let S = pword_signature N "s | {N>=2}; r | {N>=2}" ;

let R = psrs S "s s -> | {N>=2};
 		s r -> r^{N-1} s | {N>=2} ;
 		r^{N} -> | {N>=2};"
 	;
let Rnorm = psrs S "s r^{k} -> r^{N-k} s | {N>=2 /\ 1 <= k <= N-1 };";

pconfluent_ext R Rnorm;
