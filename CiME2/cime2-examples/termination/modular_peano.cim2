let F1 = signature "
0 : constant;
s : unary;
+ : AC";

let X = vars "x y z";

let R1 = HTRS {} F1 X "
x+0 -> x;
x+s(y) -> s(x+y);
";

termcrit "dp";
termcrit "nograph";
termcrit "nomarks";

#verbose;
h_termination R1;

let F2 = signature "* : AC";
  
let R2 = HTRS {R1} F2 X "
x*0 -> 0;
x*s(y) -> (x*y) + x;
";


h_termination R2;

termcrit "marks";
h_termination R2;

#quit;


