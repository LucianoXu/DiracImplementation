(*

Quotient 

*)

let F = signature "
  0 : constant;
  s,p : unary;
  -,/ : infix binary;
";

let X =vars "x y z";

let quotient = TRS F X "
  p(s(x)) -> x ;
  x-0 -> x ;
  x-s(y) -> p(x-y) ;
  0/s(y) -> 0 ;
  s(x)/s(y) -> s((x-y)/s(y)) ;
";

termcrit "dp";
termcrit "nomarks";

#time on;
#verbose 2;

termination quotient;

