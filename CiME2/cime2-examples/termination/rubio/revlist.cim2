let Var = vars "L X Y" ;

let F = signature "
  nil,0 : 0;
  s, rev : 1;
  rev1, rev2, cons : 2;
";

let R = HTRS {} F Var "
rev1(0,nil) -> 0;
rev1(s(X),nil) -> s(X);
rev1(X,cons(Y,L)) -> rev1(Y,L);
rev(nil) -> nil;
rev(cons(X,L)) -> cons(rev1(X,L),rev2(X,L));
rev2(X,nil) -> nil;
rev2(X,cons(Y,L)) -> rev(cons(X,rev(rev2(Y,L))));
";

termcrit "dp" ; 
termcrit "minimal" ; 
polyinterpkind {("linear",1)} ;
#time on;
h_termination R;

#quit;
