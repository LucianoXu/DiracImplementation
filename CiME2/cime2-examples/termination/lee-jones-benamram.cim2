(*
Lee, Jones and Ben-Amram
"size-change termination" (POPL'01). 
http://www.diku.dk/topps/bibliography/2001.html#D-429.
*)

let X = vars "x y z w";

let F = signature "
f : 4;
s: 1;
";

let R = TRS F X "
f(x,y,s(z),w) -> f(y,y,z,s(s(w))) ;
f(s(x),y,z,s(w)) -> f(s(x),x,s(s(z)),w) ;
";

termcrit "dp";
#verbose 1;
termination R;
