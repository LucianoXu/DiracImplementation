let X = vars "x y v u z";

let F= signature "
0, nil : 0;
div,i : 2 ;
h : 3;
egypt,s : 1;
@,dot,-,* : infix binary;
";

let R = HTRS {} F X "

div(x,y) -> h(x,y,y);
egypt(0@y) -> nil;
egypt((s(x))@y) -> (div(y,s(x))) dot (egypt(i((s(x)@y),(s(0))@(div(y,s(x))))));
h(s(0),y,z) -> s(0);
h(s(s(x)),s(0),z) -> s(h(s(x),z,z));
h(s(s(x)),s(s(y)),z) -> h(s(x),s(y),z);
i(x@y, u@v) -> ((x * v) - (y * u))@(y * v);
";

polyinterpkind {("linear",1)};

#time on;
termcrit "minimal";
h_termination R;

