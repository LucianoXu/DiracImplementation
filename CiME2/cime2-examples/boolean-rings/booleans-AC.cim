operators
  xor, and, or : AC
  false, true : constant
  x,y,z : variable
  not : unary

axioms

%  x xor false = x ;
  x and true = x ;
  x and false = false ;
%  x and (y xor z) = (x and y) xor (x and z);

  x or true = true ;
  x or false = x ;
  x and (y or z) = (x and y) or (x and z);
  
%  x and x = x ;
%  x or y = not(not(x) and not(y));
%  not(x) xor x = true;

order  lexico ( mapo ( and  > or );
                poly([and](x,y)=x.y ; [or](x,y)=x+y+1))

end





