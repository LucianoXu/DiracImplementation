operators
  xor, and, or : AC
  false, true : constant
  x,y,z : variable
  -,not : unary

%theory CR(xor,false,-,and,true) 
theory ACI(and)

unification theory ACI(and)

axioms
  x xor false = x;
  x xor -(x) = false;
  -(false) = false;
  -(x xor y) = -(x) xor -(y);
  -(-(x)) = x;
  x and true = x;
  x and (y xor z) = (x and y) xor (x and z);
  x and false = false;
  x and -(y) = -(x and y);
%  x and x = x;
  x or y = not(not(x) and not(y));
  not(x) xor x = true;

order  rpo (
   or > not > true > and > - > xor > false)

end





