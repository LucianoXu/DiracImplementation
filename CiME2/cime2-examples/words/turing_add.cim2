
(* Machine de Turing qui additionne *)

let S = word_signature "0 1 q0 q1 q2";

let R = SRS S "
         1 q0 1 -> 0 1 q1 ; 
         1 q0 0 -> 0 0 q1 ;
         1 q1 1 -> 1 1 q1 ; 
         1 q1 0 -> 1 0 q1 ;
         0 q1   -> q2 1   ; 
         1 q2   -> q2 1   ; 
         0 q2   -> 0 q0   ; 
    ";

let fun test s = word_normalize R (word S s);

test "0 q0 0 0" ; 
test "0 q0 0 0" ; 
test "1 q0 0 0" ; 
test "1 q0 0 1" ; 
test "1 q0 1 1 1 0 1 1 1 1" ; 
