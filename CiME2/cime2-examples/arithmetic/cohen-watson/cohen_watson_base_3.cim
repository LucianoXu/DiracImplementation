% $Id: cohen_watson_base_3.cim,v 1.1 1996/07/18 10:56:09 marche Exp $

operators

0,1,2,c :constant
x,y,z:variable
+,*:AC
.:infix binary

axioms

0*x=0;
1*x=x;
2*x=x.(c*x);
c*c=1;
(x.y)*z=(x*z).(y*z);
(y+z)*x=(x*y)+(x*z);

0+x=x;
x+x=x.(c*x);
1+c=0;
2+x=1.(c+x);
(x.y)+z=x.(y+z);
(c*x)+x=0;

c.2=c;
x.c=(c+x).2;
0.x=x;
x.(y.z)=(x+y).z;

end
