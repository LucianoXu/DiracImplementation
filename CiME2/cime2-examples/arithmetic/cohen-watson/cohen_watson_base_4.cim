let X = vars "x y z";
let sig_cw = signature "
0,1,2,3,c :constant;
+,*:AC;
.:infix binary;
";

let trs_cw = HTRS {} sig_cw X "

0*x -> 0;
1*x -> x;
2*2 -> 1.0;
3*x -> x.(c*x);
c*c -> 1;
2*c -> c.2;
(x.y)*z -> (x*z).(y*z);
(y+z)*x -> (x*y)+(x*z);

0+x -> x;
x+x -> 2*x;
1+2 -> 3;
1+c -> 0;
2+c -> 1;
3+x -> 1.(c+x);
(x.y)+z -> x.(y+z);
(2*x)+x -> x.(c*x);
(c*x)+x -> 0;
(2*x)+(c*x) -> x;

c.3 -> c;
x.c -> (c+x).3;
0.x -> x;
x.(y.z) -> (x+y).z;
";

termcrit "minimal";
m_termination trs_cw;
